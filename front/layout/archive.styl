.archive {
    &-title {
        margin 1rem 0
    }
    &-tagline {
        max-width 900pxr
        font-size 1.5rem
        line-height 1.3
    }
    &-description {
        max-width 900pxr
        margin-bottom 1rem
    }
    &-list {
        display flex
        flex-direction row
        align-items stretch
        justify-content flex-start
        flex-wrap wrap
        width calc(100% + 1.6rem)
        margin-left -0.8rem
        padding 2rem 0
        &-item {
            margin-bottom 1.6rem
            padding 0 0.8rem
            width 100%
            for col in 2..4 {
                screen = (350*col)px
                w = (100 / col)%
                @media (min-width screen) {
                    width w
                }
            }
        }
    }
}
