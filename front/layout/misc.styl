body.error404 {
    .siteHeader-inner {
        box-shadow none
    }
    .siteContent {
        margin-top 0
    }
}
.notFound {
    position relative
    &-top {
        position absolute
        z-index 1
        top 0
        left 0
        width 100%
        height 60%
    }
    &-content {
        display flex
        flex-direction column
        align-items center
        justify-content center
        position relative
        z-index 2
        min-height 100vh
        padding 4rem 2rem
    }
    &-title {
        display flex
        flex-direction column
        align-items center
        line-height 1.1
        .-num {
            font-size 25vw
            opacity 0.15
        }
        .-txt {
            text-transform none
        }
    }

    &-text {
        margin 2rem 0
        max-width 720px
        text-align center
        font-size 1.2rem
        opacity 0.75
    }

    &-btn {

    }
}
