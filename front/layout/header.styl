.siteHeader {
    position fixed
    z-index 1000
    width 100%
    transition transition_side

    @media (max-width 719px) {
        &-inner {
            display none !important
        }
    }

    @media (min-width 720px) {
        &-mobile {
            display none !important
        }
    }

    &-inner {
        display flex
        flex-direction row
        align-items stretch
        justify-content space-between
        position relative
        z-index 2
        height header_height
        background-color white
        border-top 4px solid c_primary_dark
        box-shadow 0 0 20pxr rgba(black, 0.12), 0 0 5pxr rgba(black, 0.12)
        .-logo {
            padding 0 2vw 0 4vw
            width 0

            &:hover, &:focus {
                opacity 0.75
            }
            img {
                height 100%
                width auto
                &.-shape {
                    display none
                }
                @media (max-width 899px) {
                    width header_height
                    &.-shape {
                        display block
                    }
                    &.-full {
                        display none
                    }
                }
            }
            @media (max-width 1023px) {
                padding-left 2vw
            }
        }
        .-nav {
            display flex
            flex-direction row
            align-items center
            justify-content flex-end
            padding-right 4vw
            height 100%

            @media (max-width 1023px) {
                padding-right 2vw
            }
        }

        .-menu a,
        .-langMenu .-lang,
        .-productsButton {
            display flex
            align-items center
            justify-content flex-start
            position relative
            height 100%
            margin 0
            padding 0 1.5em
            white-space nowrap
            text-transform uppercase
            font-size 1rem
            font-weight 700
            color c_primary_dark
            cursor pointer
            transition transition_fast
            &:hover, &:focus {
                outline none
                background-color c_light
            }
            &:focus {
                background-color c_lighter
            }
            @media (max-width 1023px) {
                padding 0 1.2em
                font-size 0.9rem
            }
        }

        .-productsButton {
            &.is--active {
                background-color c_primary_dark
                color white
            }
        }

        .-productsButton,
        .-menu > ul > li.menu-item-has-children > a {
            &::after {
                content ''
                display inline-block
                width 0.5em
                height 0.5em
                margin-left 0.5em
                border-right 2px solid c_primary_dark
                border-bottom 2px solid c_primary_dark
                transform translateY(-0.05em) rotate(-45deg)
                transition transition_fast
            }
            &.is--active {
                background-color c_primary_dark
                color white
                &::after {
                    border-right-color white
                    border-bottom-color white
                    transform translateY(-0.1em) rotate(45deg)
                }
            }
        }

        .sub-menu {
            position absolute
            z-index 5
            top 100%
            left 0
            min-width 150%
            background-color white
            transform translateY(-24pxr)
            opacity 0
            pointer-events none
            transition transition_fast
            perspective 300px
            &::before {
                content ''
                position absolute
                z-index 1
                top 0
                left 0
                width 100%
                height 100%
                background-color white
            }
            &::after {
                content ''
                position absolute
                z-index 0
                top 30pxr
                left 0
                width 100%
                height calc(100% - 30pxr)
                transform rotateX(10deg) scale(0.9)
                box-shadow 0 0 30pxr rgba(black, 0.15), 0 0 10px rgba(black, 0.12)
                transition transition
            }
            li {
                position relative
                z-index 2
                a {
                    position relative
                    margin 0
                    padding 1.25em 1.5em
                    white-space nowrap
                    opacity 0
                    transform scale(0.75)
                    transform-origin left center
                    background-color transparent
                    for num in (1..8) {
                        &:nth-child({num}) {
                            transition-delay ((1 - (num / 8)) / 3)s
                        }
                    }
                }
                &:not(:last-child) {
                    border-bottom 2px solid c_light
                }
            }
            &.is--open {
                transform translateX(0)
                opacity 1
                pointer-events auto
                li {
                    a {
                        transform scale(1)
                        opacity 1
                    }
                    for num in (1..8) {
                        &:nth-child({num}) a {
                            transition-delay ((num / 8) / 2)s
                        }
                    }
                }
            }
        }

        .-menu {
            height 100%
            & > ul {
                display flex
                flex-direction row
                align-items stretch
                height 100%
                & > li {
                    position relative
                    & > a {
                    }
                }
            }
            li.current-menu-item {
                & > a {
                    background-color c_lighter
                    color c_dark
                    &::after {
                        border-right-color c_dark
                        border-bottom-color c_dark
                    }
                }
            }
        }
        .-search,
        .-activeLang {
            display flex
            flex-direction column
            align-items center
            justify-content center
            height 100%
            width 60pxr
            font-size 21pxr
            color c_primary_dark
            cursor pointer
            transition transition_fast
            &:disabled {
                pointer-events none
            }
            .icon {
                transition transition_fast
            }
            * {
                pointer-events none
            }
            &::after {
                content ''
                display block
                position absolute
                bottom 16pxr
                width 8pxr
                height 8pxr
                border-top 2px solid c_primary_dark
                border-right 2px solid c_primary_dark
                opacity 0
                transform rotate(135deg)
                transition transition_fast
            }
            &.is--active,
            &:hover, &:focus {
                background-color c_light
                .icon {
                    transform translateY(-8pxr)
                }
                &::after {
                    opacity 1
                    transform rotate(135deg)
                }
            }
            &.is--active {
                color white
                background-color c_primary_dark
                &::after {
                    border-top-color white
                    border-right-color white
                    transform translateY(4pxr) rotate(-45deg)
                }
            }
        }
        .-langMenu {
            position relative
            height 100%
            .-languages {
                position absolute
                left auto
                top 100%
                right 0
                min-width 140%
                background-color white
                perspective 300px
                .-lang {
                    position relative
                    display block
                    z-index 2
                    width 100%
                    padding 1.25em 1.5em
                    text-transform none
                    img {
                        margin-right 0.5em
                    }
                }
            }
        }
    }



    &-outer {
        position absolute
        z-index 1
        top header_height
        left 0
        width 100%
        height 'calc(100vh - %s)' % header_height
        pointer-events none

        &.is--visible {
            pointere-events auto
        }

        & > * {
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            pointer-events none
            &.is--visible {
                pointer-events auto
            }
        }

        .-search {
            opacity 0
            visibility hidden
            background-color c_primary_dark
            transform translateX(-100px)
            transition transition_side
            html.has--backdropFilter & {
                backdrop-filter blur(40px)
                background-color rgba(c_primary_dark, 0.4)
                &-controls {
                    border-bottom none
                }
                &-results {
                }
            }
            &.is--visible {
                transform translateX(0)
                visibility visible
                opacity 1
            }
            &-controls {
                position absolute
                top 0
                left 0
                width 100%
                height 90pxr
                border-bottom 2px solid rgba(white, 0.15)
                input, & > .icon {
                    transition transition_fast
                }
                input {
                    position absolute
                    left 0
                    top 0
                    width 100%
                    height 100%
                    padding 0 5rem
                    font-size 32pxr
                    font-weight 600
                    color white
                    background-color transparent
                    -webkit-appearance none
                    border none
                    outline none
                    box-shadow none
                    &::placeholder {
                        color rgba(white, 0.5)
                        font-weight 300
                    }
                    &:focus {
                        & + .icon {
                            color white
                        }
                    }
                }
                & > .icon {
                    display flex
                    align-items center
                    justify-content center
                    position absolute
                    left 0
                    top 0
                    height 100%
                    width 5rem
                    font-size 24pxr
                    color rgba(white, 0.5)
                }
                .-link {
                    display flex
                    align-items center
                    justify-content center
                    position absolute
                    z-index 2
                    right 0
                    top 0
                    width 5rem
                    height 100%
                    font-size 36pxr
                    opacity 0
                    transform translateX(-5px)
                    &::after {
                        content ''
                        display block
                        width 0.5em
                        height 0.5em
                        margin-left 0.5em
                        border-right 2px solid white
                        border-bottom 2px solid white
                        transform translateX(-0.75rem) rotate(-45deg)
                    }
                    &[href]:not([href='']) {
                        opacity 1
                        transform translateX(0)
                    }
                }
            }
            &-results {
                position absolute
                top 90pxr
                left 0
                width 100%
                height calc(100% - 90pxr)
            }

            @media (max-width 719px) {
                html.has--backdropFilter & {
                    &-controls,
                    &-results {
                        background-color transparent
                    }
                }
            }
        }

        .-products {
            display flex
            flex-direction row
            align-items stretch
            overflow hidden
            background-color rgba(c_primary_dark, 0)
            transition transition_side

            &.is--visible {
                background-color c_primary_dark
                .-products-types,
                .-products-list {
                    transform translateX(0)
                }
            }

            &-list, &-types {
                position relative
                transition transition_side
            }

            &-types {
                z-index 2
                overflow-y auto
                -webkit-overflow-scrolling touch
                width 320pxr
                background-color white
                box-shadow 0 0 10pxr rgba(black, 0.12), 0 0 4pxr rgba(black, 0.12)
                transform translateX(-100%)
                &::-webkit-scrollbar-track {
                    background-color c_white
                }
                &::-webkit-scrollbar {
                    width 8px
                    background-color c_white
                }
                &::-webkit-scrollbar-thumb {
                    background-color c_primary_lighter
                }
                .-type {
                    display flex
                    flex-direction row
                    align-items center
                    justify-content flex-start
                    width 100%
                    height calc(1rem + 6vh)
                    padding-left calc(0.75rem + 0.25vh + 0.25vw)
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap
                    text-transform uppercase
                    font-size calc(0.75rem + 0.25vh + 0.25vw)
                    font-weight 700
                    cursor pointer
                    transition transition_fast
                    &::after {
                        justify-self flex-end
                        content ''
                        display block
                        width 0.5em
                        height 0.5em
                        margin 0 1em 0 auto
                        border-right 2px solid c_light
                        border-bottom 2px solid c_light
                        transform translateY(-0.05em) rotate(-45deg)
                        transition transition_fast
                    }
                    &:hover, &:focus {
                        color c_primary
                        background-color c_lighter
                        &::after {
                            border-color c_gray
                        }
                    }
                    &.is--active {
                        color c_primary
                        background-color c_primary_lightest
                        &::after {
                            border-color c_primary
                        }
                    }
                }
            }

            &-list {
                position absolute
                z-index 1
                top 0
                left 0
                height 100%
                width 100%
                padding-left 320pxr
                transform translateX(-100%) translateY(0)

                &-scroller {
                    transition transition_side
                    for num in (1..16) {
                        &.is--index-{num} {
                            transform translateY('calc((-100vh + %s) * %s)' % (header_height num))
                        }
                    }
                }
            }

            .-collection {
                position relative
                overflow-y auto
                -webkit-overflow-scrolling touch
                height "calc(100vh - %s)" % header_height
                background-color white
                transition transition_side
                opacity 0
                transform scale(0.9)

                &::-webkit-scrollbar-track {
                    background-color c_white
                }
                &::-webkit-scrollbar {
                    width 8px
                    background-color c_white
                }
                &::-webkit-scrollbar-thumb {
                    background-color c_primary_lighter
                }

                &.is--visible {
                    opacity 1
                    transform scale(1)
                }
                &-header, &-list {
                    position relative
                }
                &-header {
                    z-index 1
                    padding 2rem 25% 2rem 3rem
                    color white
                    background linear-gradient(112deg, c_primary, c_primary_lighter)
                    .-subtitle, .-description {
                        position relative
                        z-index 1
                        max-width 900pxr
                    }
                    .-title {
                        white-space nowrap
                        overflow hidden
                        text-overflow ellipsis
                        z-index 2
                        width 100%
                        margin-bottom 0.5em
                        text-transform uppercase
                        text-decoration underline
                        text-decoration-color transparent
                        font-size calc(1rem + 1vw)
                        font-weight 700
                        color white
                        &:hover, &:focus {
                            color white
                            text-decoration-color white
                        }
                    }
                    .-subtitle, .-description {
                        font-weight 300
                    }
                    .-subtitle {
                        margin-bottom 0.5em
                        line-height 1.3
                        font-size calc(1rem + 0.5vw)
                    }
                    .-image {
                        position absolute
                        z-index 0
                        top 0
                        right 0
                        max-width 25%
                        max-height 100%
                        pointer-events none
                    }
                }
                &-list {
                    display flex
                    flex-direction row
                    align-items stretch
                    justify-content flex-start
                    flex-wrap wrap
                    z-index 2
                    width 100%
                    padding 2rem 2rem 4rem
                    background-color white
                    transition transition_fast
                    &.is--scrolled {
                        box-shadow 0 0 50px rgba(black, 0.12), 0 0 10px rgba(black, 0.15)
                    }
                    .-product {
                        width 100%
                        margin-bottom 2vh
                        padding 1rem
                        color c_primary_dark
                        transition transition_fast
                        for col in 2..10 {
                            screen = (300*col - 150)px
                            w = (100 / col)%
                            @media (min-width screen) {
                                width w
                            }
                        }

                        &-image {
                            position relative
                            width 100%
                            height 0
                            padding-bottom 120%
                            img {
                                position absolute
                                top 0
                                left 0
                                width 100%
                                height 100%
                                object-fit cover
                                font-family 'object-fit: cover'
                            }
                        }
                        &-title {
                            margin 12pxr 0 0
                            line-height 1.1
                            font-size 18pxr
                            font-weight 700
                        }
                        &-subtitle {
                            margin 6pxr 0 0
                            line-height 1.4
                            font-size 14pxr
                        }

                        &:hover, &:focus {
                            box-shadow 0 6pxr 16pxr rgba(black, 0.1), 0 2px 6px rgba(black, 0.1)
                            transform translateY(-2px)
                            color c_primary
                        }
                    }
                }
            }

            @media (max-width 1279px) {
                &-types {
                    width 270pxr
                }
                &-list {
                    padding-left 270pxr
                }
            }

            @media (max-width 899px) {
                &-types {
                    width 210pxr
                    .-type {
                        //height calc(4vh + 2vw)
                    }
                }
                &-list {
                    padding-left 210pxr
                }
            }

            @media (max-width 719px) {
                background-color c_primary_dark
                opacity 0
                pointer-events none
                transform none
                html.has--backdropFilter & {
                    background-color transparent
                    backdrop-filter blur(20px)
                }
                &.is--visible {
                    background-color transparent
                    opacity 1
                    pointer-events auto
                    transform none
                    .-products-list {
                        transform none
                    }
                }
                &-types {
                    z-index 1
                    width 100%
                    padding 1rem 0
                    transform translateX(0)
                    background-color c_primary_dark
                    html.has--backdropFilter & {
                        background-color transparent
                    }
                    .-type {
                        justify-content flex-start
                        height 3em
                        padding 0 2rem
                        font-size 1.2rem
                        font-weight 600
                        color white
                        background-color transparent
                        &:hover, &:focus {
                            background-color transparent
                            color white
                            &::after {
                                border-color white
                            }
                        }
                        &::after {
                            margin 0
                            margin-left auto
                            margin-right 0.9rem
                            border-color white
                        }
                    }
                }
                &-list {
                    z-index 2
                    padding-left 0
                    pointer-events none
                    &-scroller {
                        width 100%
                        height 100%
                        transform none !important
                    }
                }
                .-collection {
                    position absolute
                    top 0
                    left 0
                    width 100%
                    height 100%
                    pointer-events none
                    opacity 0
                    transform translateX(100%)
                    &.is--visible {
                        opacity 1
                        pointer-events auto
                        transform translateX(0)
                    }
                    &-header {
                        padding 1.5rem 2rem
                        .-image {
                            max-width 50%
                            max-height 100%
                            pointer-events none
                            opacity 0.25
                        }
                    }
                    &-list {
                        padding 1.5rem 1rem 4rem
                    }
                }
            }
        }
    }



    &-mobile {
        display block
        position relative
        z-index 1
        width 100%

        .-top {
            display flex
            flex-direction row
            align-items stretch
            justify-content flex-start
            position relative
            z-index 2
            height header_height
            background-color c_primary_dark
            html.has--backdropFilter & {
                backdrop-filter blur(40px)
                background-color rgba(c_primary_dark, 0.8)
            }
            .-logo {
                display flex
                align-items center
                justify-content center
                padding 8pxr 5vw
                width 'calc(12vw + %s - %s)' % (header_height 16pxr)
                text-align center
                img {
                    height auto
                    width 100%
                }
            }
            .-label {
                display block
                overflow hidden
                text-overflow ellipsis
                white-space nowrap
                margin-left auto
                width 100%
                line-height header_height
                text-align center
                font-size 1.2rem
                font-weight 600
                color rgba(white, 0.5)
            }
            .-menuButton {
                display flex
                align-items center
                justify-content center
                padding 0 5vw
                .hamburger-inner {
                    &, &::before, &::after {
                        background-color mix(white, c_primary_dark, 75%)
                    }
                }
                &.is--back {

                }
            }
        }

        .-nav {
            display flex
            flex-direction column
            align-items stretch
            position absolute
            z-index 4
            top header_height
            left 0
            width 100%
            padding-top 1rem
            height 'calc(100vh - %s)' % header_height
            background-color c_primary_dark
            pointer-events none
            opacity 0
            transition transition_side

            &::before {
                content ''
                position absolute
                bottom 100%
                left 0
                width 100%
                height 2px
                background-color rgba(white, 0.15)
            }

            html.has--backdropFilter & {
                backdrop-filter blur(40px)
                background-color rgba(c_primary_dark, 0.6)
            }

            &.is--visible {
                pointer-events auto
                opacity 1
            }

            .-search {
                order 1
            }
            .-productsButton {
                order 2
            }
            .-menu {
                order 3
            }
            .-langMenu {
                order 4
            }

            .-menu,
            .-langMenu {
                margin-top 1rem
                padding-top 1rem
            }

            .-menu a,
            .-langMenu .-lang,
            .-productsButton,
            .-search,
            .-activeLang {
                display flex
                align-items center
                justify-content flex-start
                position relative
                width 100%
                height 3em
                margin 0
                padding 0 2rem
                white-space nowrap
                text-transform uppercase
                font-size 1.2rem
                font-weight 600
                color white
                background transparent
                transition transition_fast
            }
            .-productsButton,
            .-search {
                &::after {
                    content ''
                    display inline-block
                    width 0.5em
                    height 0.5em
                    margin-left auto
                    margin-right 0.9rem
                    border-right 2px solid white
                    border-bottom 2px solid white
                    transform rotate(-45deg)
                    transition transition_fast
                }
                &.is--active {
                    color white
                    &::after {
                        border-right-color white
                        border-bottom-color white
                    }
                }
            }

            .-menu {
                border-top 2px solid rgba(white, 0.15)
                .sub-menu {
                    a {
                        font-size 0.9em
                        opacity 0.5
                    }
                }
            }

            .-activeLang {
                display none
            }

            .-langMenu {
                border-top 2px solid rgba(white, 0.15)
                .-lang {
                    text-transform none
                    font-size 0.9em
                    span {
                        opacity 0.5
                    }
                    img {
                        margin-right 0.5em
                    }
                }
            }
        }
    }
}
